<h1>This is where you fill out a new contact form</h1>

<% @form.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for @form, :url => contact_form_index_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.submit("Contact me!") %>

<% end%>

<p><%= link_to("Home", root_path)%></p>