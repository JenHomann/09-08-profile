<h1>New Article</h1>

<!--runs any errors if this is rendering from an unvalidated create file -->
<% @article.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<!--renders the form whether or not it was sent here from an unvalidated file or another route -->
<%= form_for @article do |p| %>

  <p><%= p.label :title %>
  <%= p.text_field :title %></p>
  
  <p><%= p.label :body %>
  <%= p.text_area :body, size: '80x5 '%></p>
  
  <p><%= p.label :draft %>
  <%= p.check_box :draft %></p>
  
  <p><%= p.label :featured %>
  <%= p.check_box :featured %></p>
  
  <p><%= p.submit %></p>

<% end %>

<p><%= link_to("Home", root_path)%></p>