<div id="show">
  <h1><%= @article.title %></h1>
  <p><% if @article.draft %>
        DRAFT
      <% end %></p>
  <p><% if @article.featured %>
        FEATURED
      <% end %></p>

  <p><%= link_to("Awesome", awesome_page_path)%>: <% if @awesomes != 0 || @awesomes != nil %>
      <%= @awesomes %>
      <% end %></p>

  <p><%= simple_format (@article.html_body) %></p>

  <% if current_user %>
    <%= link_to("Edit article", edit_article_path)%>
  <% end %>
</div>