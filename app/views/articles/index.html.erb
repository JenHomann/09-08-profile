<h1>Articles</h1>

<% @articles.each do |article| %>
  <p><% if article.featured %>
        *
    <% end %>
    <%= link_to(" #{article.title}", article_path(article.id)) %> (length: <%= article.relative_length%>)<br>
      <%= article.excerpt %> ... <%= link_to("[more]", article_path(article.id)) %></p>
<% end %>

<%= link_to("New article", new_article_path) %>

<p><%= link_to("Home", root_path)%></p>