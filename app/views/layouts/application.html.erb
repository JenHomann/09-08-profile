<!DOCTYPE html>
<html>
<head>
  <title>jen.</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>


<body>
  <div id="container">
    <header>
      <div class="top_nav">
        <p><%=link_to("portfolio", class_projects_path)%></p>
      </div>
      <div class="top_nav">
        <p><%=link_to("articles", articles_path)%></p>
      </div>
      <div class="top_nav">
        <p><%=link_to("about", "#")%></p>
      </div>
      <div id="logo">
        <p><%= link_to("jen", root_path)%></p>
      </div>
    </header>
    
    <div id="content">
      <% if flash[:notice]%>
        <p id="notice"><%= flash[:notice]%></p>
        <% end %>
      <% if flash[:alert] %>
        <p id="alert"><%= flash[:alert]%></p>
      <% end %>

      <%= yield %>
    </div>
    
    <footer>
      <div class="social_link">
        <p><%= link_to("GitHub", "#")%></p>
      </div>
      <div class="social_link">
        <p><%= link_to("Twitter", "#")%></p>
      </div>
      <div class="social_link">
        <p><%= link_to("Wordpress", "#")%></p>
      </div>
      <div class="social_link">
        <p><%= link_to("Facebook", "#")%></p>
      </div>
      <div class="social_link">
        <p><%= link_to("LinkedIn", "#")%></p>
      </div>
      <div id="contact_me">
        <p><%= link_to("Contact me", new_contact_form_path)%></p>
      </div>
      <% if current_user %>
        Logged in as <%= current_user.email %> <%= link_to("Log out", logout_path)%>
      <% else %>
        NOT logged in! <%= link_to("Log in", logins_path)%>
      <% end %>
    </footer>
    
  </div>

</body>

</html>